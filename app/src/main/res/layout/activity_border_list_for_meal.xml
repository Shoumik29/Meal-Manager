<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".borderListForMeal">

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/borderListMeal"
        android:layout_width="0dp"
        android:layout_height="479dp"
        android:background="@drawable/oneside_corner"
        android:backgroundTint="#88CAFF"
        android:elevation="30dp"
        android:paddingStart="20dp"
        android:paddingTop="40dp"
        android:paddingEnd="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0" />

    <Button
        android:id="@+id/button20"
        android:layout_width="152dp"
        android:layout_height="60dp"
        android:background="@drawable/round"
        android:elevation="30dp"
        android:text="Confirm Selection"
        android:textColor="#000000"
        app:layout_constraintBottom_toTopOf="@+id/borderListMeal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.532"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>