<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".advanceMealSearch">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/constraintLayout10"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:background="@drawable/down_curve"
                android:backgroundTint="#FFC107"
                app:layout_constraintBottom_toTopOf="@+id/constraintLayout9"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_chainStyle="spread">

                <EditText
                    android:id="@+id/searchMTA"
                    android:layout_width="342dp"
                    android:layout_height="61dp"
                    android:background="@drawable/round"
                    android:backgroundTint="#ADDBFF"
                    android:ems="10"
                    android:hint="Search Meal Via Manager ID"
                    android:inputType="textPersonName"
                    android:paddingStart="20dp"
                    android:paddingEnd="60dp"
                    android:textColor="#3551F3"
                    android:textColorHint="#556DEF"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.492"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_chainStyle="spread" />

                <ImageView
                    android:id="@+id/imageView15A"
                    android:layout_width="52dp"
                    android:layout_height="50dp"
                    android:paddingBottom="10dp"
                    app:layout_constraintBottom_toBottomOf="@+id/searchMTA"
                    app:layout_constraintEnd_toEndOf="@+id/searchMTA"
                    app:layout_constraintHorizontal_bias="0.965"
                    app:layout_constraintStart_toStartOf="@+id/searchMTA"
                    app:layout_constraintTop_toTopOf="@+id/searchMTA"
                    app:layout_constraintVertical_bias="1.0"
                    app:srcCompat="@drawable/search_icon" />
            </androidx.constraintlayout.widget.ConstraintLayout>


            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/constraintLayout9"
                android:layout_width="match_parent"
                android:layout_height="506dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintTop_toBottomOf="@+id/constraintLayout10">

                <TextView
                    android:id="@+id/textView70"
                    android:layout_width="152dp"
                    android:layout_height="43dp"
                    android:text="Meal Name"
                    android:textColor="#000000"
                    android:textSize="18sp"
                    app:layout_constraintBottom_toTopOf="@+id/textView71"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.5"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias="0.112"
                    app:layout_constraintVertical_chainStyle="spread" />

                <TextView
                    android:id="@+id/textView71"
                    android:layout_width="161dp"
                    android:layout_height="44dp"
                    android:text="Manager Name"
                    android:textColor="#000000"
                    android:textSize="18sp"
                    app:layout_constraintBottom_toTopOf="@+id/textView76"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.5"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/textView70"
                    app:layout_constraintVertical_bias="0.32" />

                <TextView
                    android:id="@+id/textView76"
                    android:layout_width="173dp"
                    android:layout_height="43dp"
                    android:text="Number of Borders"
                    android:textColor="#000000"
                    app:layout_constraintBottom_toTopOf="@+id/textView77"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.5"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/textView71"
                    app:layout_constraintVertical_bias="0.466" />

                <TextView
                    android:id="@+id/textView77"
                    android:layout_width="194dp"
                    android:layout_height="53dp"
                    android:text="Location"
                    android:textColor="#000000"
                    app:layout_constraintBottom_toTopOf="@+id/button15A"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.5"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/textView76"
                    app:layout_constraintVertical_bias="0.613" />

                <Button
                    android:id="@+id/button15A"
                    android:layout_width="129dp"
                    android:layout_height="57dp"
                    android:background="@drawable/round"
                    android:text="Join Meal"
                    app:backgroundTint="#FF394FCA"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.5"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/textView77"
                    app:layout_constraintVertical_bias="0.824" />
            </androidx.constraintlayout.widget.ConstraintLayout>
        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>